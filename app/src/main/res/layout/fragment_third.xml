<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <TextView
                android:id="@+id/tv_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="消息"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setFloor"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/msg_attention"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="评论"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="7dp"
                    android:id="@+id/iv_redCircle0"
                    android:layout_height="7dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="#FF0000"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#08000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/reply"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/msg_reply"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="回复"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="7dp"
                    android:id="@+id/iv_redCircle1"
                    android:layout_height="7dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="#FF0000"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#08000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/like"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/msg_like"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="点赞"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="7dp"
                    android:id="@+id/iv_redCircle2"
                    android:layout_height="7dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="#FF0000"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#08000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/attention"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/msg_setfloor"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="通知"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="7dp"
                        android:id="@+id/iv_redCircle3"
                        android:layout_height="7dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="5dp"
                        android:src="#FF0000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbar"
                android:background="@drawable/tool_bar_shadow">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#05000000">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="想了解更多？试试"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1565C0"
                        android:text=" 去搜索"
                        android:id="@+id/tv_search"
                        android:autoLink="all"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

</LinearLayout>